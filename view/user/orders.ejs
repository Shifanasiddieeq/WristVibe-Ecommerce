  <style>
   
.modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0, 0, 0, 0.5);
  transition: opacity 0.3s ease;
}

.modal-content {
  background-color: #fff;
  margin: 5% auto;
  padding: 30px;
  border-radius: 8px;
  width: 70%;
  max-height: 80%;
  overflow-y: auto; /* Makes modal content scrollable */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.modal-header {
  text-align: center;
  font-size: 24px;
  margin-bottom: 20px;
  color: #333;
}

.modal-body {
  font-family: 'Arial', sans-serif;
  line-height: 1.6;
}

.close {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 30px;
  color: #aaa;
  cursor: pointer;
}

.close:hover,
.close:focus {
  color: black;
}

.order-section {
  margin-bottom: 20px;
}

.order-section h3 {
  color: #333;
  font-size: 18px;
  margin-bottom: 5px;
}

.order-section p {
  color: #555;
  margin-bottom: 10px;
}

.status {
  padding: 5px 10px;
  border-radius: 5px;
  font-weight: bold;
}

.pending {
  background-color: #f39c12;
  color: white;
}

.shipped {
  background-color: #3498db;
  color: white;
}

.delivered {
  background-color: #2ecc71;
  color: white;
}

.cancelled {
  background-color: #e74c3c;
  color: white;
}

.returned {
  background-color: #9b59b6;
  color: white;
}

/* Table Styling */
.order-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 10px;
}

.order-table th, .order-table td {
  padding: 12px;
  text-align: left;
  border: 1px solid #ddd;
  font-size: 16px;
}

.order-table th {
  background-color: #f5f5f5;
  color: #333;
}

.order-table tr:hover {
  background-color: #f1f1f1;
}

.order-table td img {
  width: 50px;
  height: auto;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}

/* Hover effects */
.order-section table tr:hover {
  background-color: #f1f1f1;
}

/* Mobile Responsiveness */
@media screen and (max-width: 768px) {
  .modal-content {
    width: 95%;
    padding: 20px;
  }

  .order-section h3 {
    font-size: 16px;
  }

  .order-section th, .order-section td {
    padding: 10px;
    font-size: 14px;
  }

  .order-section td img {
    width: 40px;
  }
}

