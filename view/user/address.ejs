<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address Page</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.0/dist/sweetalert2.min.css" />
    <link rel="stylesheet" href="/style/user/sidebar.css">


    <style>
        body {
            display: flex;
            flex-wrap: nowrap;
            height: 100vh;
            margin: 0;
            padding: 0;
        }

        main {
            flex: 1;
            margin-left: 270px;
        }

        .address-container {
            margin-top: 20px;
            flex: 1;
            padding: 20px;
        }

        h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .btn-add {
            display: block;
            margin-bottom: 20px;
            margin-left: auto;
        }

        .list-group {
            margin-top: 20px;
        }

        .list-group-item {
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
        }

        .list-group-item h5 {
            margin-bottom: 5px;
            font-size: 18px;
        }

        .list-group-item p {
            margin: 0;
            font-size: 14px;
        }
    </style>
</head>

<body>
    <style>
        .main-div {
            width: 700px;
            position: absolute;
            left: 300px;
        }

        .address-container {
            margin-top: 20px;
        }

        .address-card {
            margin-bottom: 15px;
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 5px;
        }

        .btn-edit {
            background-color: #28a745;
            color: white;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
        }


        .delete-btn {
            background-color: #ff4a4a;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

        .delete-btn:hover {
            background-color: #e63946;
        }


        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .pagination a {
            margin: 0 5px;
            padding: 8px 12px;
            text-decoration: none;
            border: 1px solid #ddd;
            border-radius: 5px;
            color: #007bff;
            background-color: #f8f9fa;
        }

        .pagination a:hover {
            background-color: #e2e6ea;
        }

        .pagination .btn-success {
            color: white;
            background-color: #007bff;
            border-color: #007bff;
        }
    </style>
    <div>
        <%- include('partial/sidebar') %>
    </div>
    <main class="main">
        <div class="main-div">
            <div class="container address-container">
                <h2 class="content-head"><a href="/account"><svg xmlns="" height="24px"
                            viewBox="" width="24px" fill="">
                            <path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z" />
                        </svg></a> </h2>


                <button class="btn btn-primary btn-add" onclick="window.location.href='/add-address'">Add
                    Address</button>


                <div class="container address-container">

                    <% if (address && address.length> 0) { %>
                        <% address.forEach((address,index)=> { %>

                            <div class="address-card">
                                <h5>Address <%= index + 1 %>
                                </h5>
                                <h5>
                                    <%= address.houseNo %>, <%= address.area %>
                                </h5>
                                <p><strong>Landmark:</strong>
                                    <%= address.landmark || 'N/A' %>
                                </p>
                                <p><strong>City:</strong>
                                    <%= address.town %>, <%= address.state %>
                                </p>
                                <p><strong>Pincode:</strong>
                                    <%= address.pincode %>
                                </p>
                                <div class="address-actions">

                                    <a href="/edit-address/<%= address._id %>" class="btn btn-edit btn-action">Edit</a>

                                    <button class="delete-btn" data-addressId="<%= address._id%>"> Delete</button>

                                </div>
                            </div>



                            <% }); %>
                                <% } else { %>
                                    <p style="color: #ff4a4a;">No address found.</p>
                                    <% } %>
                </div>
                <div class="pagination">
                    <% if (currentPage> 1) { %>
                        <a href="?page=<%= currentPage - 1 %>" class="btn btn-primary">Previous</a>
                        <% } %>

                            <% for (let i=1; i <=totalPages; i++) { %>
                                <a href="?page=<%= i %>"
                                    class="btn <%= currentPage === i ? 'btn-success' : 'btn-light' %>">
                                    <%= i %>
                                </a>
                                <% } %>

                                    <% if (currentPage < totalPages) { %>
                                        <a href="?page=<%= currentPage + 1 %>" class="btn btn-primary">Next</a>
                                        <% } %>
                </div>
            </div>

        </div>

    </main>
    <style>
        .btn.btn-primary.btn-add {
            background-color: #ff4a4a;
            border-color: #ff4a4a;
            color: white;
        }

        .btn.btn-primary.btn-add:hover {
            background-color: #e63946;
            border-color: #e63946;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.0/dist/sweetalert2.all.min.js"></script>



    <script>
        document.querySelectorAll('.delete-btn').forEach(button => {
            button.addEventListener('click', () => {
                const addressId = button.getAttribute("data-addressId");

                Swal.fire({
                    title: 'Are you sure?',
                    text: "Do you want to delete this address?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, cancel!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        axios.post(`/delete-address/${addressId}`)
                            .then(res => {
                                Swal.fire(
                                    'Deleted!',
                                    'The address has been deleted.',
                                    'success'
                                );

                                const addressCard = button.closest('.address-card');
                                if (addressCard) {
                                    addressCard.remove();
                                }
                            })
                            .catch(error => {
                                Swal.fire(
                                    'Error!',
                                    'There was an issue deleting the address.',
                                    'error'
                                );
                            });
                    } else if (result.dismiss === Swal.DismissReason.cancel) {

                        Swal.fire(
                            'Not Cancelled',
                            'The address is safe!',
                            'info'
                        );
                    }
                });
            });
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>



</body>

</html>